{
  "manifest_version": 3,
  "name": "Font Replacer",
  "version": "1.0",
  "description": "Replaces specified fonts with alternatives across all pages",
  "icons": {"128": "icon.png"},
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"],
    "run_at": "document_end"
  }],
  "permissions": ["storage"]
}
